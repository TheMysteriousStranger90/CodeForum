@model CodeForum.Models.ViewModels.TopicEditViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="login-card fade-in">
                <div class="card-header text-center">
                    <div class="edit-topic-icon">
                        <i class="fas fa-edit fa-3x mb-3"></i>
                    </div>
                    <h3 class="login-title">Edit Topic</h3>
                    <p class="text-muted">Update your topic information</p>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editTopicForm">
                        <input type="hidden" asp-for="Id"/>
                        <input type="hidden" asp-for="CategoryId"/>

                        <div class="form-group floating-label mb-4">
                            <input asp-for="Title" class="form-control" placeholder=" "/>
                            <label asp-for="Title">Title</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Content">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="6" 
                                    style="background: white; border: 2px solid #e0e0e0;"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-route-categoryId="@Model.CategoryId"
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.edit-topic-icon {
    color: var(--primary);
    margin-bottom: 1.5rem;
}

.floating-label {
    position: relative;
    margin-bottom: 1.5rem;
}

.floating-label input {
    height: 50px;
    padding: 0.75rem;
    border-radius: 8px;
    border: 2px solid #e0e0e0;
    background: white;
}

.floating-label label {
    position: absolute;
    top: 50%;
    left: 15px;
    transform: translateY(-50%);
    transition: all 0.2s ease;
    pointer-events: none;
    font-size: 1rem;
    color: #757575;
}

.floating-label input:focus ~ label,
.floating-label input:not(:placeholder-shown) ~ label {
    top: 0;
    transform: translateY(-50%) scale(0.85);
    background: white;
    padding: 0 5px;
}

.btn {
    height: 40px;
    font-size: 1rem;
    font-weight: 500;
    position: relative;
}

.login-card {
    border-radius: 15px;
    box-shadow: 0 0 20px rgba(0,0,0,0.1);
    margin: 2rem 0;
}

.card-header {
    background: none;
    border: none;
    padding: 2rem 1rem;
}

.login-title {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 0.5rem;
}
</style>