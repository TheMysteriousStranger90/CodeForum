@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="login-card fade-in">
                <div class="card-header text-center">
                    <div class="roles-icon">
                        <i class="fas fa-user-shield fa-3x mb-3"></i>
                    </div>
                    <h3 class="login-title">Role Management</h3>
                    <p class="text-muted">Manage system roles and permissions</p>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Role Name</th>
                                <th class="text-end">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-user-tag me-2"></i>
                                        @role.Name
                                    </td>
                                    <td class="text-end">
                                        <form asp-action="Delete" asp-route-id="@role.Id" 
                                              method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this role?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add New Role
                        </a>
                        <a asp-action="UserList" class="btn btn-outline-primary">
                            <i class="fas fa-users"></i> User List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.table th {
    color: var(--primary);
    font-weight: 600;
    font-size: 1.1rem;
}

.table td {
    color: var(--dark);
}

.text-muted {
    color: #6c757d !important;
}

.login-title {
    color: var(--primary);
}
</style>