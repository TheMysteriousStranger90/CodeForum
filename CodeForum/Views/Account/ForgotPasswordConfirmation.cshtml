@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="login-card fade-in">
                <div class="card-header text-center">
                    <div class="confirmation-icon">
                        <i class="fas fa-envelope-open-text fa-4x text-success mb-4"></i>
                    </div>
                    <h3 class="login-title">Check Your Email</h3>
                    <p class="text-muted">
                        If the email you entered is associated with an account in our system, 
                        we have sent a password reset link to it.
                    </p>
                </div>
                <div class="card-body text-center">
                    <a asp-controller="Account" asp-action="Login" 
                       class="btn btn-primary btn-block btn-login">
                        <i class="fas fa-arrow-left mr-2"></i>Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>