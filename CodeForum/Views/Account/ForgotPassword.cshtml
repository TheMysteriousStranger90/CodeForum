@model CodeForum.Models.ViewModels.ForgotPasswordViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="login-card">
                <div class="card-header text-center">
                    <div class="forgot-password-icon">
                        <i class="fas fa-key fa-3x mb-3"></i>
                    </div>
                    <h3 class="login-title">Forgot Password?</h3>
                    <p class="text-muted">Enter your email address to receive a password reset link</p>
                </div>
                
                <div class="card-body">
                    <form method="post" class="login-form">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="form-group floating-label">
                            <input asp-for="Email" class="form-control" placeholder=" " autocomplete="email"/>
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block btn-login">
                            <span class="btn-text">Send Reset Link</span>
                            <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        </button>

                        <div class="text-center mt-4">
                            <a asp-controller="Account" asp-action="Login" class="back-to-login">
                                <i class="fas fa-arrow-left mr-2"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const btn = this.querySelector('.btn-login');
            const text = btn.querySelector('.btn-text');
            const spinner = btn.querySelector('.spinner-border');
            
            text.classList.add('d-none');
            spinner.classList.remove('d-none');
        });
    </script>
}